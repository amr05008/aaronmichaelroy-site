---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const recentPosts = allPosts.slice(0, 5);
---

<BaseLayout title="Aaron Michael Roy">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <section class="mb-16">
      <h1 class="text-5xl font-bold mb-4">Hi, I'm Aaron.</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
        Product manager, writer, and tech enthusiast based in the Bay Area.
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        I write about product management, startups, and technology. Currently working on building great products and sharing what I learn along the way.
      </p>
    </section>

    <section>
      <h2 class="text-3xl font-bold mb-8">Recent Posts</h2>
      <div class="space-y-8">
        {recentPosts.map((post) => (
          <article class="border-b border-gray-200 dark:border-gray-800 pb-8">
            <a href={`/blog/${post.slug}`} class="group">
              <h3 class="text-2xl font-semibold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition">
                {post.data.title}
              </h3>
              <time class="text-sm text-gray-600 dark:text-gray-400 mb-3 block">
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              <p class="text-gray-700 dark:text-gray-300">{post.data.description}</p>
            </a>
          </article>
        ))}
      </div>

      <div class="mt-8">
        <a
          href="/blog"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
        >
          View all posts â†’
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
