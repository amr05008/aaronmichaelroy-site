---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const recentPosts = allPosts.slice(0, 10);
---

<BaseLayout title="Aaron Michael Roy">
  <div class="max-w-3xl mx-auto px-6 py-16">
    <!-- Intro Section -->
    <section class="mb-20">
      <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6">
        Hi, I'm Aaron.
      </h1>
      <p class="text-xl text-gray-600 leading-relaxed mb-6">
        I'm a product manager based in the Bay Area. I write about product management,
        startups, and technology.
      </p>
      <p class="text-lg text-gray-600 leading-relaxed">
        Currently building products and sharing what I learn along the way.
      </p>
    </section>

    <!-- Recent Posts Section -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold">Recent Writing</h2>
        <a href="/writing" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
          View all →
        </a>
      </div>

      <div class="space-y-10">
        {recentPosts.map((post) => (
          <article class="group">
            <a href={`/${post.slug}`} class="block">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition-colors">
                {post.data.title}
              </h3>
              <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-us', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {post.data.categories && post.data.categories.length > 0 && (
                  <>
                    <span>•</span>
                    <span>{post.data.categories[0]}</span>
                  </>
                )}
              </div>
              <p class="text-gray-600 leading-relaxed">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
